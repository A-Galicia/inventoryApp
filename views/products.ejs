<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Inventory</title>
    <link rel="stylesheet" href="/products.css" />
    <link rel="stylesheet" href="/navBarFooter.css" />
  </head>
  <body>
    <%- include('navBar.ejs') %>
    <div class="main">
      <h1><%= title %></h1>
      <a href="/products/form">Create New Product</a>
      <div class="productDiv">
        <% products.map((product) => { %>
        <div>
          <a href="/products/<%= product.id %>">
            <div class="product">
              <p>Product: <%= product.name %></p>
              <p>Price: $<%= product.price %></p>
            </div>
          </a>
          <a href="/products/Modify/<%= product.id %>"
            >Modify <%= product.name %></a
          >
          <form action="/products/delete/<%= product.id %>" method="post">
            <button
              type="submit"
              onclick="return confirm('This will permanently delete this product and its data');"
            >
              Delete <%= product.name %>
            </button>
          </form>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
